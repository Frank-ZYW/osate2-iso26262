<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            id="FMEA.commands.category"
            name="Sample Category">
      </category>
      <command
            categoryId="FMEA.commands.category"
            name="FMEA Command"
            id="FMEA.commands.sampleCommand">
      </command>
   </extension>
   
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.osate.iso26262.fmea.handler.FMEAhandler"
            commandId="FMEA.commands.sampleCommand">
      </handler>
   </extension>
   
   
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="FMEA.commands.sampleCommand"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6">
      </key>
   </extension>
   
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="FMEA.menus.sampleMenu"
               label="FMEA test"
               mnemonic="M">
            <separator
                      name="core">
            </separator>
            <command
                  commandId="FMEA.commands.sampleCommand"
                  id="FMEA.menus.sampleCommand"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="FMEA.toolbars.sampleToolbar"
               label="ISO26262">
            <separator
                  name="core">
            </separator>
            <command
                  id="FMEA.toolbars.sampleCommand"
                  commandId="FMEA.commands.sampleCommand"
                  icon="icons/sample.png"
                  tooltip="FMEA generation">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
