<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            id="FMEA.commands.category"
            name="HARA Category">
      </category>
      <command
            categoryId="FMEA.commands.category"
            name="HARA Command"
            id="HARA.commands.sampleCommand">
      </command>
   </extension>
   
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.osate.iso26262.hara.handler.HARAhandler"
            commandId="HARA.commands.sampleCommand">
      </handler>
   </extension>
   
   
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="HARA.commands.sampleCommand"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6">
      </key>
   </extension>
   
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:FMEA.menus.sampleMenu?after=core">
            <command
                  commandId="HARA.commands.sampleCommand"
                  id="hara.menus.sampleCommand"
                  mnemonic="H">
            </command>
      </menuContribution>
      
      <menuContribution
            locationURI="toolbar:FMEA.toolbars.sampleToolbar">
            <command
                  id="HARA.toolbars.sampleCommand"
                  commandId="HARA.commands.sampleCommand"
                  icon="icons/sample.png"
                  tooltip="HARA generation">
            </command>
      </menuContribution>
   </extension>

</plugin>
